{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["ES2016", "DOM"],
    "outDir": "./assets/js",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}